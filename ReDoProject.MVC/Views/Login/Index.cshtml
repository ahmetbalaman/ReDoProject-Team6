@{
    ViewData["Title"] = "Login";
}
@model Customer

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2 class="text-center mb-4">Login</h2>
                <form asp-controller="Login" asp-action="Index" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for=@Model.Email></label>
                        <input asp-for=@Model.Email class="form-control" name="email" />
                        <span asp-validation-for=@Model.Email class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for=@Model.Password></label>
                        <input asp-for=@Model.Password class="form-control" name="password" />
                        <span asp-validation-for=@Model.Password class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                    <p>Don't have an account? <a class="btn btn-success" asp-controller="Login" asp-action="Register">Register</a></p>

                </form>
              
            </div>
        </div>
    </div>
