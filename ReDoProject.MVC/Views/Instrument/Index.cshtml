@using ReDoProject.Domain.Entities
@model List<Instrument>

<head>
    <style>
        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .column {
            flex: 1;
            padding: 10px;
            max-width: 25%; /* Her sütun en fazla 25% genişliğinde olacak */
        }
    </style>
</head>

<body>
    <div class="row">
        @foreach (var product in Model)
        {

            <div class="column">
                <div class="card" style="width:100%;">
                <a href="/instrument/inspect/@product.Id">   <img class="card-img-top" src="@product.PictureUrl" alt="Card image"></a>
                    <div class="card-body">
                        <h4 class="card-title">@product.Name</h4>
                        <p class="card-text">@product.Description</p>
                        <a href="/instrument/inspect/@product.Id" class="btn btn-primary">Inspect</a>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
