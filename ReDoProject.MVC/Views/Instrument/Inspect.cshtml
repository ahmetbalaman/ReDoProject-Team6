@using ReDoProject.Domain.Entities;
@model Instrument


    <div class="container">
        <div class="row">
            <!--form asp-controller="Instrument" asp-action="AddBasket" method="post">-->
            <div class="col-md-6">
                <img src="@Model.PictureUrl" alt="Product Image" class="img-fluid">
            </div>
            <div class="col-md-6">
                <h2 class="my-3">@Model.Name</h2>
                <p>@Model.Description</p>
                <p>Price: $@Model.Price</p>

                <a type="submit" asp-route-id="@Model.Id" asp-controller="Instrument" asp-action="AddBasket" class="btn btn-outline-success">Add Basket</a>

            </div>
         
        </div>
    </div>

