@using ReDoProject.Domain.Entities;
@model Instrument


    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.PictureUrl" alt="Product Image" class="img-fluid">
            </div>
            <div class="col-md-6">
                <h2 class="my-3">@Model.Name</h2>
                <p>@Model.Description</p>
                <p>Price: $@Model.Price</p>
                <button href="/instrument/AddBasket/@Model.Id" class="btn btn-outline-success">Add Basket</button>
            </div>
        </div>
    </div>

