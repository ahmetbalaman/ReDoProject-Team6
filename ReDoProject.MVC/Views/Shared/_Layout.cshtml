

@using ReDoProject.Domain.Enums;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ReDoProject.MVC</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/ReDoProject.MVC.styles.css" asp-append-version="true">
    <style>
        body {
            background-color: #fff;
            color: #000;
        }

        /* Yatay menüdeki yazıları kırmızı yap */
        .navbar-nav .nav-item .nav-link {
            color: #fff;
        }

            /* Hover ile parlatma efekti ekle */
            .navbar-nav .nav-item .nav-link:hover {
                color: #fff; /* Hover durumunda yazı rengi beyaz olsun */
                background-color: #fff; /* Hover durumunda arka plan rengi kırmızı olsun */
                transition: background-color 0.3s, color 0.3s; /* Geçiş efekti ekleyin */
            }

        /* Güncellenmiş header tasarımı */
        header {
            background-color: #0000FF; /* Blue background */
            padding: 20px 0;
        }

        .navbar-brand {
            color: #fff; /* White text */
            font-size: 24px;
            font-weight: 700;
        }

        .navbar-toggler-icon {
            color: #fff;
        }

        .nav-link {
            color: #fff;
        }

            .nav-link:hover {
                color: #000; /* Black text */
                background-color: #fff; /* White background */
            }

        /* Güncellenmiş footer tasarımı */

        #bottom-footer {
            background: #000;
        }

        .custom-section {
            background-color: #000;
            padding: 20px;
            border: 1px solid #000;
            border-radius: 5px;
        }

            .custom-section h5 {
                color: #000;
            }

            .custom-section .nav-link {
                color: #000;
                text-decoration: none;
            }

        .basket-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .basket {
            color: red;
            position: relative;
        }

        .icon {
            font-size: 25px;
        }

        .basket-count {
            position: absolute;
            top: -10px;
            right: -10px;
            background-color: red;
            color: #fff;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 14px;
        }
    </style>
</head>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ReDoProject.MVC</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/ReDoProject.MVC.styles.css" asp-append-version="true">
</head>
<body>
    <!-- Header -->
    <header class="bg-primary py-4">
        <nav class="navbar navbar-expand-lg navbar-light container">
            <!-- Buraya bir logo alayım-->
            <a class="navbar-brand text-white" asp-area="" asp-controller="Instrument" asp-action="Index"> Re Do Project</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Brand" asp-action="Index">Show Brand</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Instrument" asp-action="Index">Show Instruments</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Instrument" asp-action="Add">Add Instruments</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Brand" asp-action="Add">Add Brand</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="AllCustomers">All Orders</a>
                        </li>
                    }

                    @if (Context.User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Account" class="nav-link">My Accounts</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Logout" asp-controller="Account" class="nav-link">Log Out</a>
                        </li>



                        <a href="/account/basket">
                            <div class="basket-container">
                                <div class="basket">
                                    <i class="icon ion-ios-basket">
                                        <img src="https://cdn-icons-png.flaticon.com/512/5218/5218600.png" width="30"/>

                                    </i>
                                    <span class="basket-count">@TempData["basketCount"]</span>
                                </div>
                            </div>
                        </a>

                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-action="Login" asp-controller="Account" class="nav-link">Login</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Register" asp-controller="Account" class="nav-link">Register</a>
                        </li>
                    }



                </ul>


            </div>
        </nav>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                            <div class="navbar-nav">
                                <a class="nav-item nav-link" href="/Instrument">All</a>
                                @foreach (InstrumentType instrumentType in Enum.GetValues(typeof(InstrumentType)))
                                {
                                    <a class="nav-item nav-link" href="@Url.Action("ListByInstrumentType", "Instrument", new { instrumentType = instrumentType })">@instrumentType.GetDescription()</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </nav>

    </header>


    <!-- Main Content Container -->
    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->

    <footer class="border-top py-4" id="bottom-footer" style="background: #0000FF;">


        <div class="container">
            <div class="row">
                <div class="col mb-3">
                    <h5>Section 1</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Home</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Features</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Pricing</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">FAQs</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">About</a></li>
                    </ul>
                </div>

                <div class="col mb-3">
                    <h5>Section 2</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Home</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Features</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Pricing</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">FAQs</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">About</a></li>
                    </ul>
                </div>

                <div class="col mb-3">
                    <h5>Section 3</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Home</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Features</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">Pricing</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">FAQs</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">About</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="container text-white">
            &copy; 2023 - ReDoProject.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacy</a>
        </div>

    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
