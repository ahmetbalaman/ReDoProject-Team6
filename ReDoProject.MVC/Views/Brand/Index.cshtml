@using ReDoProject.Domain.Entities;
@model List<Brand>

<div class="container mt-3">
    <h2>Brands</h2>
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Desc.</th>
                <th>Address</th>
                <th>Support Mail</th>
                <th>Support Phone</th>
                @if (User.IsInRole("Admin"))
                {
                    <th width="20px">Delete</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var brand in Model)
            {
                <tr>
                    <td>@brand.Name</td>
                    <td>@brand.DisplayingText</td>
                    <td>@brand.Address</td>
                    <td>@brand.SupportMail</td>
                    <td>@brand.SupportPhone</td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td><a href="/brand/delete/@brand.Id" class="btn btn-danger">Delete</a></td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
