@using ReDoProject.Domain.Entities;
@model List<Brand>

<div class="container mt-3">
    <h2>Brands</h2>
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Desc.</th>
                <th>Address</th>
                <th width="20px">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var brand in Model)
            {
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="..." alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@brand.Name</h5>
                        <p class="card-text">@brand.DisplayingText</p>
                        <a href="#" class="btn btn-primary">Sipariş ver</a>
                    </div>
                </div>
                <tr>
                    <td>@brand.Name</td>
                    <td>@brand.DisplayingText</td>
                    <td>@brand.Address</td>
                    <td><a href="/brand/delete/@brand.Id" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
