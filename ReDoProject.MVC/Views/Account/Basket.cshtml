
@model List<OrderedInstrument>

   <div class="container mt-5">
        <div class="row">
            <div class="col-lg-8">
                <h2>Sepetiniz</h2>
                @foreach (var instrument in Model)
                {
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-3">
                                <img src="@instrument.Instrument.PictureUrl" alt="@instrument.Instrument.Name" class="img-fluid">
                            </div>
                            <div class="col-md-9">
                                <div class="card-body">
                                    <h5 class="card-title">@instrument.Instrument.Name</h5>
                                    <p class="card-text">@instrument.Instrument.Description</p>
                                    <p class="card-text">Price: @instrument.Instrument.Price</p>
                                    <button class="btn btn-danger">Remove</button>
                                </div>
                            </div>
                        </div>
                    </div>

                }

                <!-- Diğer ürün kartları buraya eklenir -->
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Toplam Tutar</h5>
                        <p class="card-text">Toplam ürün sayısı: 3</p>
                        <p class="card-text">Toplam fiyat: $59.97</p>
                        <a href="#" class="btn btn-primary">Satın Al</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
